<?xml version="1.0" encoding="UTF-8" ?>
<precice-configuration>
  <log>
    <sink
      type="stream"
      output="stdout"
      filter="%Severity% > debug"
      format="preCICE:%ColorizedSeverity% %Message%"
      enabled="true" />
  </log>

  <solver-interface dimensions="3">
    <data:vector name="Force" />
    <data:vector name="Velocity" />

    <mesh name="Solid-Mesh-Force">
      <use-data name="Force" />
      <use-data name="Velocity" />
    </mesh>
    
    <mesh name="Solid-Mesh-Velocity">
      <use-data name="Force" />
      <use-data name="Velocity" />
    </mesh>

    <mesh name="Fluid-Mesh">
      <use-data name="Force" />
      <use-data name="Velocity" />
    </mesh>

    <participant name="Solid">
      <use-mesh name="Solid-Mesh-Force" provide="yes" />
      <use-mesh name="Solid-Mesh-Velocity" provide="yes" />
      <write-data name="Force" mesh="Solid-Mesh-Force" />
      <read-data name="Velocity" mesh="Solid-Mesh-Velocity" />
    </participant>

    <participant name="Fluid">
      <use-mesh name="Solid-Mesh-Force" from="Solid" />
      <use-mesh name="Solid-Mesh-Velocity" from="Solid" />
      <use-mesh name="Fluid-Mesh" provide="yes" />
      <mapping:nearest-neighbor
        direction="write"
        from="Fluid-Mesh"
        to="Solid-Mesh-Velocity"
        constraint="conservative" />
      <mapping:nearest-neighbor
        direction="read"
        from="Solid-Mesh-Force"
        to="Fluid-Mesh"
        constraint="consistent" />
      <write-data name="Velocity" mesh="Fluid-Mesh" />
      <read-data name="Force" mesh="Fluid-Mesh" />
    </participant>

    <m2n:sockets from="Solid" to="Fluid" exchange-directory=".."/>

    <coupling-scheme:serial-explicit>
      <participants first="Solid" second="Fluid" />
      <max-time-windows value="5" />
      <time-window-size value="1.0" />
      <exchange data="Force" mesh="Solid-Mesh-Force" from="Solid" to="Fluid" />
      <exchange data="Velocity" mesh="Solid-Mesh-Velocity" from="Fluid" to="Solid" />
    </coupling-scheme:serial-explicit>
  </solver-interface>
</precice-configuration>
